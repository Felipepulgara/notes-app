<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Account register</h3>
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" , class="form-control" placeholder="Write your name"
                            value={{name}}>
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" , class="form-control" placeholder="Write your email"
                            value={{email}}>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" , class="form-control" placeholder="Write your password"
                            value={{password}}>
                    </div>
                    <div class="form-group">
                        <input type="password" name="confirm_password" , class="form-control"
                            placeholder="Confirm your password" value={{confirm_password}}>
                    </div>
                    <div class="form-control">
                        <button class="btn btn-primary btn-block" type="submit">SignUp</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>